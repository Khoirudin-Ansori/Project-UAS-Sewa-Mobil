<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:inputType="number"
                android:id="@+id/inpIdMobil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Id"/>
            <EditText
                android:id="@+id/inpNamaMobil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama Mobil"/>
            <EditText
                android:id="@+id/inpMerkMobil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Merk Mobil"/>
            <EditText
                android:inputType="number"
                android:id="@+id/inpTahunMobil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tahun Mobil"/>
            <EditText
                android:inputType="number"
                android:id="@+id/inpKapasitasMobil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Kapasitas Mobil"/>
            <EditText
                android:inputType="number"
                android:id="@+id/inpHargaMobil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Harga Mobil"/>
            <EditText
                android:id="@+id/inpWarnaMobil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Warna Mobil"/>
            <EditText
                android:id="@+id/inpPlatMobil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Plat Mobil"/>
        </LinearLayout>
    </ScrollView>



    <Button
        android:id="@+id/btnAdd"
        android:text="Tambah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnEdit"
        android:text="Ubah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnDelete"
        android:text="Hapus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnView"
        android:text="Tampilkan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>